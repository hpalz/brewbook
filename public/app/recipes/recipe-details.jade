.container
  form.form-horizontal(name="deleteRecipeForm")
    .pull-left(ng-controller="mvDeleteRecipeCtrl")
      button.btn.btn-primary(ng-click="delete(recipe._id)") Delete Recipe
  h1 {{recipe.name}}
  .row
    .col-md-6
      h3(ng-show="recipe.featured") Featured
      h3 Published on {{recipe.created | date}}
      h3 style: {{recipe.style}}
      h3 fermentables: {{recipe.fermentables}}
      h3 hops: {{recipe.hops}}
      h3 yeasts: {{recipe.yeasts}}
      h3 type: {{recipe.type}}
      h3 batch_size: {{recipe.batch_size}}
      h3 boil_size: {{recipe.boil_size}}
      h3 boil_time: {{recipe.boil_time}}
      h3 efficiency: {{recipe.efficiency}}
      
//
    .col-md-6
      .panel.panel-primary
        .panel-heading Tags
        .panel-body
          div(ng-repeat="tag in recipe.tags") {{tag}}