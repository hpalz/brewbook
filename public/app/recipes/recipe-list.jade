.container.top-padding-med
  .pull-left(ng-controller="mvCreateRecipeCtrl")
    button.btn.btn-primary(ng-click="createNew()") Create Recipe
    button.btn.btn-primary(ng-click="import()") Import XML Recipe
  .pull-right
    form.form-inline
      .form-group
        input.form-control(ng-model="searchText", placeholder="Filter")
      .form-group.margin-left-med
        select.form-control(ng-model="sortOrder", ng-options="item.value as item.text for item in sortOptions")
  table.table.table-hover.table-striped.table-condensed
    thead
      tr
        th Name
        th Style
        th Creation Date
    tbody
      tr(ng-repeat="recipe in recipes | filter:searchText | orderBy:sortOrder")
        td
          a(href="/recipes/{{recipe._id}}") {{recipe.name}}
        td {{recipe.style.name}}
        td {{recipe.created | date}}